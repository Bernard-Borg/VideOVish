{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "videovish-tauri",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "all": false,
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "cli": {
            "args": [
                {
                    "name": "videoPath",
                    "index": 1,
                    "takesValue": true
                }
            ]
        },
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com"
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": true,
                "title": "VideOVish",
                "width": 1920,
                "height": 1080,
                "minHeight": 480,
                "minWidth": 480,
                "decorations": false,
                "titleBarStyle": "Overlay"
            }
        ]
    }
}
