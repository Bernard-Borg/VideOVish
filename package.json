{
  "name": "video-player-app",
  "description": "A minimalistic video player!",
  "main": "main.js",
  "author": "Bernard Borg",
  "license": "GNU GPLv3",
  "version": "1.3.0",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.bernardborg.videoplayerapp",
    "win": {
      "target": "nsis",
      "icon": "VideoPlayerIcon.ico"
    },
    "fileAssociations": [
      {
        "ext": "ogg",
        "name": "Ogg File",
        "role": "Editor"
      },
      {
        "ext": "webm",
        "name": "Webm File",
        "role": "Editor"
      },
      {
        "ext": "mp4",
        "name": "MP4 File",
        "role": "Editor"
      }
    ],
    "nsis": {
      "perMachine": true
    }
  },
  "repository": "https://github.com/Bernard-Borg/VideoPlayerApp",
  "keywords": [
    "video",
    "player",
    "mp4",
    "ogg",
    "webm"
  ],
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "jquery": "^3.6.0"
  }
}
