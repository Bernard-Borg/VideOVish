{
  "name": "VideoPlayerApp",
  "description": "A minimalistic video player!",
  "main": "main.js",
  "author": "Bernard Borg",
  "license": "GNU GPLv3",
  "version": "1.4.2",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.bernardborg.videoplayerapp",
    "win": {
      "target": "nsis",
      "icon": "VideoPlayerIcon.ico"
    },
    "artifactName": "${productName} Setup ${version}.exe",
    "fileAssociations": [
      {
        "ext": [
          "ogg",
          "webm",
          "mp4",
          "mov",
          "mkv",
          "mp3"
        ],
        "name": "Video File",
        "role": "Editor",
        "icon": "VideoPlayerIcon.ico"
      }
    ],
    "nsis": {
      "perMachine": true
    },
    "asarUnpack": [
      "**/app/node_modules/youtube-dl-exec/*"
    ]
  },
  "repository": "https://github.com/Bernard-Borg/VideoPlayerApp",
  "keywords": [
    "video",
    "player",
    "mp4",
    "ogg",
    "webm",
    "mov",
    "mkv",
    "mp3"
  ],
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "uuid": "^8.3.2",
    "youtube-dl-exec": "^2.1.5"
  }
}