{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:49155",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "videovish-tauri",
        "version": "2.0.1"
    },
    "tauri": {
        "allowlist": {
            "dialog": {
                "open": true,
                "save": true
            },
            "fs": {
                "exists": true,
                "scope": ["$APPDATA", "$APPDATA/*"]
            },
            "path": {
                "all": true
            },
            "window": {
                "all": true
            },
            "shell": {
                "all": true
            },
            "protocol": {
                "asset": true,
                "assetScope": ["**"]
            }
        },
        "bundle": {
            "active": true,
            "externalBin": ["binaries/yt-dlp", "binaries/ffmpeg"],
            "targets": "all",
            "identifier": "borg.videovish",
            "icon": ["../VideoPlayerIcon.ico"],
            "windows": {
                "webviewInstallMode": {
                    "type": "embedBootstrapper"
                }
            }
        },
        "cli": {
            "args": [
                {
                    "name": "videoPath",
                    "index": 1,
                    "takesValue": true
                }
            ]
        },
        "security": {
            "csp": "default-src 'self'; connect-src https://videovish.vercel.app 'self'; script-src 'self'; img-src https://i.ytimg.com 'self'; media-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com"
        },
        "windows": [
            {
                "label": "main",
                "center": true,
                "fullscreen": false,
                "resizable": true,
                "title": "VideOVish",
                "width": 1920,
                "height": 1080,
                "minHeight": 480,
                "minWidth": 480,
                "decorations": false,
                "titleBarStyle": "Overlay"
            }
        ]
    }
}
